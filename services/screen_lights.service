[Unit]
Description=Screen Lights
After=multi-user.target

[Service]
Type=idle
Restart=always
RestartSec=1
StartLimitInterval=0
StartLimitBurst=120
ExecStart=/usr/bin/env python3 -u /home/pi/ws2815test_rpi/app/screen.py
ExecStopPost=-/usr/bin/env python3 -u /home/pi/ws2815test_rpi/app/screen.py --off

[Install]
WantedBy=multi-user.target
