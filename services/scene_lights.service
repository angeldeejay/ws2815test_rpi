[Unit]
Description=Desktop Lights
After=multi-user.target

[Service]
Type=idle
Restart=always
RestartSec=1
StartLimitInterval=0
StartLimitBurst=120
ExecStart=/usr/bin/env python3 -u /home/pi/ws2815test_rpi/app/scene.py
ExecPost=-/bin/ps aux | /bin/egrep python | /bin/egrep scene | /usr/bin/awk '{print $2}' | xargs sudo kill -9
ExecStopPost=-/usr/bin/env python3 -u /home/pi/ws2815test_rpi/app/scene.py --off
TimeoutStopSec=300

[Install]
WantedBy=multi-user.target
